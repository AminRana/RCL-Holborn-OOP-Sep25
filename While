/**
 * 
 */
package switch_code;
import java.util.Scanner; //Import the Scanner class
/**
 * 
 */
public class Switch_code {

	/**
	 * @param args
	 */
	public static void main(String[] args) 
	{
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in); //Create Scanner object
	while(true)
	{
		System.out.println("Type a number between 1 and 7 to represent a day(or type 'exit' to quit):");

//Check if user typed 'exit'
if (input.hasNext("exit")) {
    System.out.println("Exiting program... Goodbye!");
    break; // Exit the loop
}

// Check if the next input is an integer
if (input.hasNextInt()) {
int day = input.nextInt();

switch (day) // Switch statement to determine the day
{
case 1:
	System.out.println("Sunday");
	break;
case 2:
	System.out.println("Monday");
	break;
case 3:
	System.out.println("Tuesday");
	break;
case 4:
	System.out.println("Wednesday");
	break;
case 5:
	System.out.println("Thursday");
	break;
case 6:
	System.out.println("Friday");
	break;
case 7:
	System.out.println("Saturday");
	break;
default:
	System.out.println("Invalid number! Please enter a number between 1 and 7.");
}
}else {
    // Skip invalid input and show error
    System.out.println("Invalid input! Please enter a number between 1 and 7 or 'exit' to quit.");
    input.next(); // clear invalid input
}
	}

input.close();
	}
}
